<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%if(errorMsg){%>
            <div style="width: fit-content;padding: 5px 10px;margin:auto;text-align:center;max-width:80%;border-color:crimson;background:rgb(255, 168, 168);"><%=errorMsg%></div>
        <%}%>
        <%if(editing){%>
        <div class="centered">
            <h1>Edit Product</h1>
        </div>
        <%}%>
        <form class="product-form" action="/admin/<%if(editing){%>edit-product<%}else{%>add-product<%}%>" method="POST" novalidate enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%if(editing){%><%=product.title%><%}%>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%if(editing){%><%=product.imageUrl%><%}%>">
            </div> -->
            <div class="form-control">
                <label for="audio">Audio/Video file</label>
                <input type="file" name="audio" id="audio">
            </div>
            <div class="form-control">
                <label for="repeat">Repeat</label>
                <input type="number" name="repeat" id="repeat" value="<%if(editing){%><%=product.repeat%><%}%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%if(editing){%><%=product.description%><%}%></textarea>
            </div>

            <%if(editing){%>
                <input type="hidden" name="productId" value="<%=product.id%>">
            <%}%>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button class="btn" type="submit"><%if(editing) {%> Update <%} else {%> Add Music <%}%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>